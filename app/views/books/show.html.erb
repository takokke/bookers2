<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tr><%= image_tag 'default-image.jpg', :size => '100x100'%></tr>
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <%= link_to edit_user_path(id: current_user.id), class:'btn btn-block btn-outline-secondary' do %>
          <i class="fa-solid fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @newBook, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Title'%>
          <%= f.text_field :title, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Opinion'%>
          <%= f.text_area :body, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:'btn btn-success'%>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(id: @book.user.id) do %>
                  <%= image_tag 'default-image.jpg', :size => '100x100'%>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(id: @book.id) do %>
                  <%= @book.title %>
                <% end %>
                </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td>
                  <%= link_to 'Edit', edit_book_path(id: @book.id), class:'btn btn-sm btn-success'%>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(id: @book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class:'btn btn-sm btn-danger'%>               
                </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>