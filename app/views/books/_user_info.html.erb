<h2>User info</h2>

<table class="table">
  <tr><%= image_tag 'default-image.jpg', :size => '100x100'%></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<% if user == current_user %>
  <div class="row">
    <%= link_to edit_user_path(id: current_user.id), class:'btn btn-block btn-outline-secondary' do %>
      <i class="fa-solid fa-user-cog"></i>
    <% end %>
  </div>
<% else %>
  <div class="row">
    <%= link_to user_path(id: current_user.id), class:'btn btn-block btn-outline-secondary' do %>
      <i class="fa-solid fa-user-cog"></i>
    <% end %>
  </div>
<% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model: newBook, url: books_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title'%>
    <%= f.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Opinion'%>
    <%= f.text_area :body, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class:'btn btn-success'%>
  </div>
<% end %>